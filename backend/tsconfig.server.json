{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "../../dist/server",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["*"],
      "@shared-server/*": ["../shared/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
